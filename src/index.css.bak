@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  color-scheme: dark;
}

body {
  margin: 0;
  background-color: #0a0e29;
  color: #ffffff;
  font-family: 'Inter', sans-serif;
  overflow-x: hidden;
}

.glass {
  background-color: rgba(17, 22, 51, 0.4);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.text-gradient {
  background: linear-gradient(to right, #1BA657, #162C99);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.glow-green {
  box-shadow: 0 0 20px rgba(27, 166, 87, 0.2);
}